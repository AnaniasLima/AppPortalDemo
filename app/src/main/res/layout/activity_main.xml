<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="52dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="150dp" />


    // Primeira linha --------------------------------------

    <LinearLayout android:id="@+id/topArea2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/gl_top1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/spinnerMachine"
        android:background="@color/colorTopArea2"
        android:orientation="horizontal">

        <Button android:id="@+id/btnLogTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/tag" />

        <Button android:id="@+id/btnLogClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/clear" />

        <Button android:id="@+id/btnStateMachine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/startStateMachine" />

        <Button android:id="@+id/btnStatusRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/statusRequest" />


    </LinearLayout>

    <Spinner android:id="@+id/spinnerMachine"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/gl_top1"
        />

    // Parte central --------------------------------------

    <androidx.recyclerview.widget.RecyclerView android:id="@+id/log_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorTextLog"
        app:layout_constraintBottom_toTopOf="@+id/gl_bottom"
        app:layout_constraintEnd_toStartOf="@+id/gl_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gl_top1" />

    <androidx.recyclerview.widget.RecyclerView android:id="@+id/history_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorTextHistory"
        app:layout_constraintBottom_toTopOf="@+id/gl_bottom"
        app:layout_constraintStart_toStartOf="@+id/gl_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gl_top1" />

    <VideoView android:id="@+id/video_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/gl_bottom"
        app:layout_constraintEnd_toStartOf="@+id/gl_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gl_top1" />

    <Button android:id="@+id/btn_modo_waiting_person"
        android:text="AGUARDANDO PESSOA"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:background="@color/white"
        android:textColor="@color/blue"
        android:textSize="60dp"
        app:layout_constraintBottom_toTopOf="@+id/gl_bottom"
        app:layout_constraintEnd_toStartOf="@+id/gl_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gl_top1" />

    <Button android:id="@+id/btnInvisivel"
        android:text=""
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/gl_bottom"
        app:layout_constraintEnd_toStartOf="@+id/gl_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gl_top1"
        android:background="?android:selectableItemBackground"/>

    // Rodape --------------------------------------


    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/sensores_layout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="#3296FA"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gl_bottom">

        <TextView android:id="@+id/tv_sensor1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Presença"
            android:textColor="@color/blue"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Button android:id="@+id/btn_sensor1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="@+id/tv_sensor1"
            app:layout_constraintTop_toBottomOf="@+id/tv_sensor1"
            app:srcCompat="@drawable/sensor_com_gente" />

        <!--  ============================================================ -->
        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/temperatura_layout"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_sensor1"
            android:background="@android:color/holo_blue_light">

            <TextView android:id="@+id/temperatura_valor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="35°"
                android:textColor="@color/blue"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/temperatura_seekBar"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/temperatura_seekBar"
                app:layout_constraintTop_toTopOf="parent" />

            <SeekBar android:id="@+id/temperatura_seekBar"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:rotation="270"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/temperatura_valor"/>

            <TextView android:id="@+id/temperatura_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temp"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/temperatura_seekBar" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <!--  ============================================================ -->
        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/alcohol_dispenser"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_sensor1"
            android:background="#3296FA">

            <TextView android:id="@+id/tv_alcohol_dispenser"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/blue"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button android:id="@+id/btn_alcohol_dispenser"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/white"
                app:layout_constraintStart_toStartOf="@+id/tv_alcohol_dispenser"
                app:layout_constraintTop_toBottomOf="@+id/tv_alcohol_dispenser"
                app:srcCompat="@drawable/devices" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <Button android:id="@+id/btn_door_in"
            android:layout_width="15dp"
            android:layout_height="100dp"
            android:background="@color/white"
            app:layout_constraintStart_toEndOf="@+id/temperatura_layout"
            app:layout_constraintTop_toBottomOf="@+id/tv_sensor1"
            app:srcCompat="@drawable/door_red" />


        <TextView android:id="@+id/tv_sensor2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Entrada"
            android:textColor="@color/blue"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/btn_door_in"
            app:layout_constraintTop_toTopOf="parent" />

        <Button android:id="@+id/btn_sensor2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="@+id/tv_sensor2"
            app:layout_constraintTop_toBottomOf="@+id/tv_sensor2"
            app:srcCompat="@drawable/sensor_com_gente" />


        <TextView android:id="@+id/tv_cleaning_area"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Área de descontaminação"
            android:textColor="@color/blue"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/tv_sensor2"
            app:layout_constraintTop_toTopOf="parent" />

        <Button android:id="@+id/btn_cleaning_area"
            android:layout_width="200dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="@+id/tv_cleaning_area"
            app:layout_constraintTop_toBottomOf="@+id/tv_cleaning_area"
            app:srcCompat="@drawable/cleaning_area_off" />

        <TextView android:id="@+id/tv_sensor3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Saida"
            android:textColor="@color/blue"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/tv_cleaning_area"
            app:layout_constraintTop_toTopOf="parent" />

        <Button android:id="@+id/btn_sensor3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="@+id/tv_sensor3"
            app:layout_constraintTop_toBottomOf="@+id/tv_sensor3"
            app:srcCompat="@drawable/sensor_com_gente" />

        <Button android:id="@+id/btn_door_out"
            android:layout_width="15dp"
            android:layout_height="100dp"
            android:background="@color/white"
            app:layout_constraintStart_toEndOf="@+id/tv_sensor3"
            app:layout_constraintTop_toBottomOf="@+id/tv_sensor3"
            app:srcCompat="@drawable/door_red" />

        <Button android:id="@+id/btn_money"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/white"
            app:layout_constraintStart_toEndOf="@+id/btn_door_out"
            app:layout_constraintTop_toBottomOf="@+id/tv_sensor3"
            app:srcCompat="@drawable/dindin" />




    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout android:id="@+id/ll_balancas"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toTopOf="@+id/gl_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sensores_layout">


        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/alcohol_layout"
            android:layout_width="170dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@+id/gl_bottom"
            app:layout_constraintStart_toEndOf="@+id/temperatura_layout"
            android:background="@android:color/holo_blue_light">

            <TextView
                android:id="@+id/alcohol_valor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="100%"
                android:textColor="@color/blue"
                android:textSize="28sp"
                app:layout_constraintEnd_toEndOf="@+id/alcohol_seekBar"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/alcohol_seekBar"
                app:layout_constraintTop_toTopOf="parent" />

            <SeekBar
                android:id="@+id/alcohol_seekBar"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:rotation="270"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/alcohol_valor"/>

            <TextView
                android:id="@+id/alcohol_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Álcool"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/alcohol_seekBar" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--  ============================================================ -->

        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/desinfectante_layout"
            android:layout_width="170dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@+id/gl_bottom"
            app:layout_constraintStart_toEndOf="@+id/alcohol_layout"
            android:background="@android:color/holo_blue_light">

            <TextView
                android:id="@+id/desinfectante_valor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="100%"
                android:textColor="@color/blue"
                android:textSize="28sp"
                app:layout_constraintEnd_toEndOf="@+id/desinfectante_seekBar"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/desinfectante_seekBar"
                app:layout_constraintTop_toTopOf="parent" />

            <SeekBar
                android:id="@+id/desinfectante_seekBar"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:rotation="270"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/desinfectante_valor"/>

            <TextView
                android:id="@+id/desinfectante_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Desinfectante"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/desinfectante_seekBar" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--  ============================================================ -->

        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/desinfectante_pe_layout"
            android:layout_width="170dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@+id/gl_bottom"
            app:layout_constraintStart_toEndOf="@+id/desinfectante_layout"
            android:background="@android:color/holo_blue_light">

            <TextView
                android:id="@+id/desinfectante_pe_valor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="100%"
                android:textColor="@color/blue"
                android:textSize="28sp"
                app:layout_constraintEnd_toEndOf="@+id/desinfectante_pe_seekBar"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/desinfectante_pe_seekBar"
                app:layout_constraintTop_toTopOf="parent" />

            <SeekBar
                android:id="@+id/desinfectante_pe_seekBar"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:rotation="270"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/desinfectante_pe_valor"/>

            <TextView
                android:id="@+id/desinfectante_pe_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="desinfectante_pe"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/desinfectante_pe_seekBar" />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>


    // Outros --------------------------------------

    <Button android:id="@+id/buttonErro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:clickable="false"
        android:visibility="invisible"
        android:text="Erro ao carregar arquivo"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>